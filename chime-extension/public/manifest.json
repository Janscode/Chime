{
  "manifest_version": 2,
  "background" : {
    "scripts": [
      "firebase-sdk/firebase-app.js",
      "firebase-sdk/firebase-auth.js",
      "firebase-sdk/firebase-firestore.js",
      "background.js"
    ]
  },
  "content_scripts": [
      { 
          "matches": ["<all_urls>"],
          "js": ["./content_scripts/inject/inject.js"]
      }
  ],
  "browser_action": {
      "default_icon": {
        "500": "./chime.png"
      },
      "default_title": "Manage Chime",
      "default_popup": "index.html"
  },
  "name": "Chime",
  "permissions": [],
  "version": "0.0.0"
}